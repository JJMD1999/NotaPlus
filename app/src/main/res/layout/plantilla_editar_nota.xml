<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plantilla_editar_nota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/enfasis"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/edicion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/edicion"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/colores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/colores"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/color_notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/view_color_predeterminado"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/color_nota_predeterminado"/>

            <ImageView
                android:id="@+id/imagenColorPredeterminado"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_check"
                app:tint="@color/fondo" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/view_azul"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/color_nota_azul"/>

            <ImageView
                android:id="@+id/imagenColorAzul"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/view_naranja"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/color_nota_naranja"/>

            <ImageView
                android:id="@+id/imagenColorNaranja"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/view_rojo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/color_nota_rojo"/>

            <ImageView
                android:id="@+id/imagenColorRojo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/view_amarillo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/color_nota_amarillo"/>

            <ImageView
                android:id="@+id/imagenColorAmarillo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>